<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresOptionsActivity"
    android:background="#05b6ec">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="135dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="104dp"
        app:srcCompat="@drawable/closeletter" />

    <TextView
        android:id="@+id/receiving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="26dp"
        android:text="You have recieved "
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000"/>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="200dp"
        android:layout_height="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        app:srcCompat="@drawable/openletter" />

    <Button
        android:id="@+id/ques"
        android:layout_width="236dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:text="See Questions"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="108dp"
        android:layout_height="115dp"
        android:layout_alignStart="@+id/ques"
        android:layout_alignLeft="@+id/ques"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-20dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="133dp"
        app:srcCompat="@drawable/happy" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="77dp"
        android:layout_height="88dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="146dp"
        app:srcCompat="@drawable/poker" />

    <Button
        android:id="@+id/fb"
        android:layout_width="236dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:text="See feedbacks"
        android:textSize="20dp" />
</RelativeLayout>