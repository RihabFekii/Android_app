<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getvoucher">

    <Button
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="#05b6ec"
        android:text="This is the voucher for
your presntation"
        android:textColor="#FFF"
        android:textSize="23dp"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="70dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/voucher-output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="259dp"
        android:hint="Voucher"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnBeginPres"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:height="35dp"
        android:backgroundTint="#9a05b6ec"
        android:text="Let's begin !"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn-getvoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="152dp"
        android:backgroundTint="#9a05b6ec"
        android:text="Click to get the Voucher" />

</RelativeLayout>